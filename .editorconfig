# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js,jsx,ts,tsx,dart}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 120

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.dart]
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
